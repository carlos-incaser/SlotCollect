<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.incaser.apps.slotcollect.RecuperacionPrestamoEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaLeft"
                android:text="Fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>
            <EditText
                android:id="@+id/txt_fechaRecuperacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:gravity="right"
                android:layout_weight="0.5"
                android:text="2014-04-01"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaLeft"
                android:text="Importe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>
            <EditText
                android:id="@+id/txt_importeRecuperacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:text="200.80"
                android:layout_weight="0.5"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/EtiquetaLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n"
                />
            <EditText
                android:id="@+id/txt_descripcionRecuperacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La maquina se ha roto"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
