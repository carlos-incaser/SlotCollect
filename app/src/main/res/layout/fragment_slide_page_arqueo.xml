<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.incaser.apps.slotcollect.RecaudacionMaquina">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Arqueo realizado"/>
            <CheckBox
                android:id="@+id/chArqueoRealizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Tipo arqueo"/>
            <EditText
                android:id="@+id/txtTipoArqueo"
                style="@style/EditTextContadores"
                android:text="XX"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Arqueo teórico"/>
            <EditText
                android:id="@+id/txtArqueoTeorico"
                style="@style/EditTextContadores"
                android:text="4564897" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaSeparador"
                android:text="Dinero introducido a la máquina"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Introducido al hopper"/>
            <EditText
                android:id="@+id/txtCargaHopper"
                style="@style/EditTextContadores"
                android:text="4564897"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Carga rec. empresa"/>
            <EditText
                android:id="@+id/txtCargaRecEmpresa"
                style="@style/EditTextContadores"
                android:text="4564897" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Carga rec. establecimiento"/>
            <EditText
                android:id="@+id/txtCargaRecEstablecimiento"
                style="@style/EditTextContadores"
                android:text="4564897"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaSeparador"
                android:text="Diferencia de contadores"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/customborder">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingRight="15dp"
                style="@style/EtiquetaContadores"
                android:gravity="right"
                android:text="% Premio"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Recaudado"/>
            <EditText
                android:id="@+id/txtDiferenciaRecaudacion"
                style="@style/EditTextContadores"
                android:text="4564897" />
            <EditText
                android:id="@+id/txtPorcPremio"
                style="@style/EditTextContadores"
                android:text="4564897"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Arqueo"/>
            <EditText
                android:id="@+id/txtDiferenciaArqueo"
                style="@style/EditTextContadores"
                android:text="4564897" />
            <EditText
                android:id="@+id/txtPorcArqueo"
                style="@style/EditTextContadores"
                android:text="4564897"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Instalación"/>
            <EditText
                android:id="@+id/txtDiferenciaInstalacion"
                style="@style/EditTextContadores"
                android:text="4564897" />
            <EditText
                android:id="@+id/txtPorcInstalacion"
                style="@style/EditTextContadores"
                android:text="4564897"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Dias Efectivos"/>
            <EditText
                android:id="@+id/txtDiasEfectivosUR"
                style="@style/EditTextContadores"
                android:text="4564897" />
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Días Nat."/>
            <EditText
                android:id="@+id/txtDiasNaturalesUR"
                style="@style/EditTextContadores"
                android:text="4564897"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/EtiquetaContadores"
                android:text="Media diaria"/>
            <EditText
                android:id="@+id/txtMediaDiaria"
                style="@style/EditTextContadores"
                android:text="4564897"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
