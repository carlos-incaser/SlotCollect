<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="#ddd">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="2dp"
        android:id="@+id/item_maquina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold|italic"
                android:textSize="16sp"
                android:id="@+id/tv_descripcion_maquina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE DE LA MAQUINA" />

            <TextView
                android:id="@+id/tv_codigoMaquina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="(S064655)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de instalación: " />

            <TextView
                android:id="@+id/tv_fechaInstalacionMaquina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TvDate"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ultima recaudación: " />

            <TextView
                android:id="@+id/tv_fechaUltimaRecaudacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TvDate"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_maquinaRecaudada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recaudada"
                android:gravity="right"
                android:textColor="@color/resaltado"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>