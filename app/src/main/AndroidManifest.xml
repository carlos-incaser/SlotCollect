<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.incaser.apps.slotcollect" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".EstablecimientosLogic"
            android:label="@string/title_activity_establecimientos_logic" >
        </activity>
        <activity
            android:name=".DetallesEstablecimiento"
            android:label="@string/title_activity_detalles_establecimiento" >
        </activity>
        <activity
            android:name=".RecaudacionMaquina"
            android:label="@string/title_activity_recaudacion_maquina" >
        </activity>
        <activity
            android:name=".ScreenSlidePagerRecaudacion"
            android:label="@string/title_activity_Screen_Slide_Recaudacion" >
        </activity>
        <activity
            android:name=".Prestamos"
            android:label="@string/title_activity_prestamos" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
